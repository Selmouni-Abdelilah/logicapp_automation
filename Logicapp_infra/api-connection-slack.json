{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "connections_slack_name": {
            "defaultValue": "slack",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[parameters('connections_slack_name')]",
            "location": "[resourceGroup().location]",
            "kind": "V2",
            "properties": {
                "api": {
                    "id": "[concat('/subscriptions/','1dabcf09-861c-4374-aebf-d63be509564b', '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/', parameters('connections_slack_name'))]"
                }
            }
        }
    ],
    "outputs": {
        "connectionRuntimeUrl": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.Web/connections', 'slack'),'2016-06-01', 'full').properties.connectionRuntimeUrl]"
    }
  }
}